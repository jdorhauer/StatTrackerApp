@model IEnumerable<StatTracker.Models.PlayerModels.PlayerListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Players</h2>

<p>
    @using (Html.BeginForm("Index", "Player", FormMethod.Get))
    {
        <b>Search Team Roster: </b>
        @Html.DropDownList("TeamID", null, string.Empty, htmlAttributes: new { @class = "form-control" }) <br /><input type="submit" value="Search" /><br /> <br />
    }
</p>
<p>
    @Html.ActionLink("Add Player", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerPosition)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerPosition)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlayerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerID })
            </td>
        </tr>
    }

</table>
